@model IEnumerable<CustomerContactManager.Models.CustomerContact>

@{
    ViewBag.Title = "Contacts";
}

<h2>Contacts</h2>

<p>
    @Html.ActionLink("Create New", "CreateContact", new { id = Model.FirstOrDefault().CustomerId })
</p>

@if (Model.FirstOrDefault().Name != "No records")
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CustomerId)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactNumber)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditContact", new { id = item.Id }) |
                    @Html.ActionLink("Details", "ContactDetails", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "DeleteContact", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
@Html.ActionLink("Back to List", "Index")
